@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;

    @* var isJobSeeker = await Model.IsUserInRole("Job Seeker");
    var isEmployer = await Model.IsUserInRole("Employer");
    var isAdmin = await Model.IsUserInRole("Admin"); *@
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            @* @if(isJobSeeker) *@
            @if (User.IsInRole("Job Seeker"))
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.JobSeeker.Name" class="form-control" placeholder="Please enter your full name." />
                    <label asp-for="Input.JobSeeker.Name" class="form-label"></label>
                    <span asp-validation-for="Input.JobSeeker.Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="Input.JobSeeker.Education" class="form-select" aria-required="true">
                    <option disabled selected>Select education</option>
                    <option value="High School">High School</option>
                    <option value="College">College</option>
                    <option value="University">University</option>
                    <option value="Master">Master</option>
                    <option value="PhD">PhD</option>
                    <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Input.JobSeeker.Education" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.JobSeeker.Email" class="form-control" placeholder="Please enter your email address." />
                    <label asp-for="Input.JobSeeker.Email" class="form-label"></label>
                    <span asp-validation-for="Input.JobSeeker.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.JobSeeker.Phone" class="form-control" placeholder="Please enter your phone number." />
                    <label asp-for="Input.JobSeeker.Phone" class="form-label"></label>
                    <span asp-validation-for="Input.JobSeeker.Phone" class="text-danger"></span>
                </div>
            }
            else if(User.IsInRole("Employer"))
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Employer.Name" class="form-control" placeholder="Please enter your company name." />
                    <label asp-for="Input.Employer.Name" class="form-label"></label>
                    <span asp-validation-for="Input.Employer.Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Employer.Email" class="form-control" placeholder="Please enter your email address." />
                    <label asp-for="Input.Employer.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Employer.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Employer.Phone" class="form-control" placeholder="Please enter your phone number." />
                    <label asp-for="Input.Employer.Phone" class="form-label"></label>
                    <span asp-validation-for="Input.Employer.Phone" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Employer.Address" class="form-control" placeholder="Please enter your address." />
                    <label asp-for="Input.Employer.Address" class="form-label"></label>
                    <span asp-validation-for="Input.Employer.Address" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Employer.Description" class="form-control" placeholder="Please enter your description." />
                    <label asp-for="Input.Employer.Description" class="form-label"></label>
                    <span asp-validation-for="Input.Employer.Description" class="text-danger"></span>
                </div>
            }else if(User.IsInRole("Admin")){
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            }
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
